<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="member_information_tree" model="ir.ui.view">
        <field name="name">member.information.tree</field>
        <field name="model">member.information</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="assigned_from"/>
                <field name="assigned_to"/>
                <field name="role"/>
                <field name="is_manager"/>
            </tree>
        </field>
    </record>

    <record id="member_information_form" model="ir.ui.view">
        <field name="name">member.information.form</field>
        <field name="model">member.information</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="assigned_from"/>
                        <field name="assigned_to"/>
                        <field name="role"/>
                        <field name="is_manager"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>